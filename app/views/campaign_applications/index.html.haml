  %tbody
    - @campaign_applications.each do |campaign_application|
      %tr
        %td= campaign_application.read_book_1_title
        %td= campaign_application.read_book_1_date
        %td= campaign_application.read_book_2_title
        %td= campaign_application.read_book_2_date
        %td= campaign_application.read_book_3_title
        %td= campaign_application.read_book_3_date
        %td= campaign_application.read_book_4_title
        %td= campaign_application.read_book_4_date
        %td= link_to 'Show', campaign_application
        %td= link_to 'Edit', edit_campaign_application_path(campaign_application)
